{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "mam3d shop api"
  },
  "host": "127.0.0.1:8000",
  "basePath": "/api/",
  "tags": [
    {
      "name": "User",
      "description": "Authentication"
    },
    {
      "name": "Shop"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/validate-phone/": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "post phone number and recieve code via sms",
        "description": "",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "phone",
            "type": "string",
            "description": "phone number to send sms",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "the code has been successfully sent to your phone"
          },
          "400": {
            "description": "you cant request code anymore"
          }
        }
      }
    },
    "/register/": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "registering user",
        "description": "",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "phone",
            "in": "formData",
            "type": "string",
            "description": "phone number to register",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "description": "password for account",
            "required": true
          },
          {
            "name": "password2",
            "in": "formData",
            "type": "string",
            "description": "password2 for verify password",
            "required": true
          },
          {
            "name": "code",
            "in": "formData",
            "type": "integer",
            "description": "code recieved from /validate-phone/",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "registered"
          },
          "400": {
            "description": "failed"
          }
        }
      }
    },
    "/login/": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "login user",
        "description": "",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "phone",
            "in": "formData",
            "type": "string",
            "description": "phone number to login",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "description": "password to login",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "you have logged in and token will be available in header"
          },
          "400": {
            "description": "you cant request code anymore"
          }
        }
      }
    },
    "/logout/": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "logout user",
        "description": "Authenticated Only",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "logged out"
          }
        }
      }
    },
    "/user/info/": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "user profile",
        "description": "Authenticated Only",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "unauthenticated or bad request"
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "user profile update",
        "description": "Authenticated Only",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "address",
            "in": "formData",
            "type": "string",
            "description": "User's address",
            "required": true
          },
          {
            "name": "postal_code",
            "in": "formData",
            "type": "integer",
            "description": "User's postal_code",
            "required": true
          },
          {
            "name": "name",
            "in": "formData",
            "type": "string",
            "description": "User's name",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "ok"
          },
          "400": {
            "description": "unauthenticated or bad request"
          }
        }
      }
    },
    "/categories/": {
      "get": {
        "tags": [
          "Shop"
        ],
        "summary": "lists all categories",
        "description": "lists all categories",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/categoriy/{slug}/": {
      "get": {
        "tags": [
          "Shop"
        ],
        "summary": "lists all products associated with given category",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/products/": {
      "get": {
        "tags": [
          "Shop"
        ],
        "summary": "lists all products associated with given category",
        "description": "",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "bad request"
          }
        }
      }
    },
    "/product/{slug}/": {
      "get": {
        "tags": [
          "Shop"
        ],
        "summary": "product detail",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/product/{id}/add/": {
      "post": {
        "tags": [
          "Shop"
        ],
        "summary": "add product to cart",
        "description": "Authenticated only",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "variations",
            "in": "formData",
            "type": "array",
            "description": "it should be list of variation ids that product accept (optional)",
            "items": {
              "type": "integer"
            },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "added or quantity increased"
          },
          "400": {
            "description": "bad request"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/product/{id}/remove/": {
      "post": {
        "tags": [
          "Shop"
        ],
        "summary": "remove product from cart",
        "description": "Authenticated only",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "variations",
            "in": "formData",
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "it should be list of variation ids that product has if it dosent empty list",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "removed or quantity decreased"
          },
          "400": {
            "description": "bad request"
          },
          "404": {
            "description": "not found"
          }
        }
      }
    },
    "/cart/": {
      "get": {
        "tags": [
          "Shop"
        ],
        "summary": "lists all of products ready to purchase",
        "description": "Authenticated Only",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "cart is empty"
          }
        }
      }
    },
    "/discount/": {
      "post": {
        "tags": [
          "Shop"
        ],
        "summary": "add discount to total order price",
        "description": "Authenticated Only",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "formData",
            "type": "string",
            "description": "discount code",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "cart is empty"
          }
        }
      }
    },
    "/checkout/": {
      "post": {
        "tags": [
          "Shop"
        ],
        "summary": "proceed to checkout",
        "description": "Authenticated Only and user must have Address,postal code and active order",
        "responses": {
          "200": {
            "description": "redirects to idpay page for paying"
          }
        }
      }
    },
    "/verify/": {
      "post": {
        "tags": [
          "Shop"
        ],
        "summary": "processes diffrent senarios for idpay response",
        "description": "checks wheater payment was successfull or not and chose what to do based on that",
        "responses": {
          "201": {
            "description": "payment accepted and order created"
          },
          "400": {
            "description": "bad request"
          }
        }
      }
    }
  }
}